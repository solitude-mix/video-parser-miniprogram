<view class="container">
  <!-- 头部用户信息 -->
  <view class="header">
    <block wx:if="{{isLoggedIn}}">
      <image class="avatar" src="{{userInfo.avatarUrl || 'https://mmbiz.qpic.cn/mmbiz/icTdbqWNOwBHdRmejX7u0vVz0z0z0z0z0/0'}}" mode="aspectFill"></image>
      <text class="nickname">{{userInfo.nickName}}</text>
    </block>
    <block wx:else>
      <view class="avatar-placeholder">
        <image class="icon-user" src="data:image/svg+xml;base64,"></image>
      </view>
      <button class="login-btn" bindtap="onLogin">点击登录</button>
    </block>
  </view>

  <!-- 菜单列表 -->
  <view class="menu-list">
    <view class="menu-item" bindtap="onAbout">
      <view class="left">
        <text>关于我们</text>
      </view>
      <view class="right">
        <text class="arrow">></text>
      </view>
    </view>

    <view class="menu-item" bindtap="onContact">
      <view class="left">
        <text>联系我们</text>
      </view>
      <view class="right">
        <text class="arrow">></text>
      </view>
    </view>

    <view class="menu-item logout" bindtap="onLogout" wx:if="{{isLoggedIn}}">
      <text>退出登录</text>
    </view>
  </view>
</view>