.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  margin-bottom: 40rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.2);
  margin-bottom: 20rpx;
}

.avatar-placeholder {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.icon-user {
  width: 80rpx;
  height: 80rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.login-btn {
  background: linear-gradient(90deg, #07c160, #00b894);
  color: #fff;
  font-size: 30rpx;
  padding: 10rpx 60rpx;
  border-radius: 40rpx;
}

.menu-list {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
  background: transparent;
}

.menu-item:active {
  background: rgba(255, 255, 255, 0.05);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item text {
  font-size: 30rpx;
  color: #ddd;
}

.arrow {
  color: #666;
  font-family: monospace;
}

.menu-item.logout {
  justify-content: center;
  margin-top: 40rpx;
  background: rgba(255, 77, 79, 0.1);
}

.menu-item.logout text {
  color: #ff4d4f;
}