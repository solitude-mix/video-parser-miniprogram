/* 顶部导航 */
.nav-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 60rpx;
  padding-top: 50rpx;
}

/* 背景装饰光斑 */
.bg-decoration {
  position: fixed;
  top: -100rpx;
  right: -100rpx;
  width: 600rpx;
  height: 600rpx;
  background: radial-gradient(circle, rgba(7, 193, 96, 0.12), transparent 70%);
  filter: blur(80rpx);
  z-index: -1;
  pointer-events: none;
}

.bg-decoration-2 {
  position: fixed;
  bottom: 10%;
  left: -100rpx;
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(circle, rgba(0, 242, 254, 0.08), transparent 70%);
  filter: blur(60rpx);
  z-index: -1;
  pointer-events: none;
}

.logo-text {
  font-size: 40rpx;
  font-weight: 800;
  background: linear-gradient(90deg, #07c160, #00f2fe);
  -webkit-background-clip: text;
  color: transparent;
  display: block;
}

.logo-sub {
  font-size: 24rpx;
  color: #888;
  letter-spacing: 2rpx;
}

.history-btn {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  backdrop-filter: blur(10px);
}

.icon-history {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}

/* 输入区域 */
.input-card {
  background: rgba(40, 40, 40, 0.6);
  border-radius: 30rpx;
  padding: 30rpx;
  border: 1px solid rgba(255, 255, 255, 0.05);
  margin-bottom: 30rpx;
}

.textarea-wrapper {
  position: relative;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  border: 1px solid rgba(255, 255, 255, 0.05);
}

.url-input {
  width: 100%;
  height: 140rpx;
  font-size: 28rpx;
  color: #fff;
  line-height: 1.5;
}

.input-placeholder {
  color: #666;
}

.clear-btn {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.tool-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.paste-btn {
  font-size: 26rpx;
  color: #07c160;
  padding: 10rpx 20rpx;
}

.parse-btn {
  background: linear-gradient(90deg, #07c160, #00b894);
  color: #fff;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-weight: 600;
  font-size: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s;
}

.parse-btn.loading {
  opacity: 0.7;
  filter: grayscale(1);
}

/* 结果区域 */
.result-area {
  animation: slideUp 0.4s ease-out;
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(30rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.author-card {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  background: rgba(255, 255, 255, 0.05);
  padding: 20rpx;
  border-radius: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.author-info {
  flex: 1;
  overflow: hidden;
}

.author-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  display: block;
}

.video-desc {
  font-size: 24rpx;
  color: #aaa;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-top: 6rpx;
}

.media-content {
  width: 100%;
  height: 400rpx;
  background: #000;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
}

.video-player, .image-swiper {
  width: 100%;
  height: 100%;
}

.slide-image {
  width: 100%;
  height: 100%;
}

/* 按钮网格 */
.action-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon-box {
  width: 90rpx;
  height: 90rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  background: rgba(255, 255, 255, 0.05);
  transition: all 0.2s;
}

.icon-box image {
  width: 44rpx;
  height: 44rpx;
}

.icon-box.blue { background: rgba(24, 144, 255, 0.15); }
.icon-box.green { background: rgba(7, 193, 96, 0.15); }
.icon-box.purple { background: rgba(114, 46, 209, 0.15); }
.icon-box.orange { background: rgba(250, 140, 22, 0.15); }

.action-item text {
  font-size: 22rpx;
  color: #bbb;
}

.action-item:active .icon-box {
  transform: scale(0.9);
}

.tips {
  text-align: center;
  margin-top: 20rpx;
  font-size: 22rpx;
  color: #666;
}

/* 错误提示 */
.error-toast {
  position: fixed;
  bottom: 50rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(255, 77, 79, 0.9);
  color: #fff;
  padding: 16rpx 30rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 77, 79, 0.3);
  z-index: 100;
  animation: shake 0.5s;
}

.error-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

@keyframes shake {
  0%, 100% { transform: translateX(-50%); }
  25% { transform: translateX(-55%); }
  75% { transform: translateX(-45%); }
}
